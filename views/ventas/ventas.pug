extends ../layouts/layout.pug
block contenido
    style.
        .badge {
            font-size: 16px;
        }
    script.
        $(document).ready( function(){
            $('#ventas').DataTable();
        });
    label(style="font-size: 1.5em") Ventas
    .divider(style="margin-bottom: 20px;")
    .text-right(style="margin-bottom: 25px;") 
        div.btn-group
            a(href="/ventas/nuevo").btn.btn-primary
                i.fas.fa-plus-circle
                |   Nuevo
            a(href="#o").btn.btn-primary.disabled
                i.fas.fa-file-pdf
                |   Reportes
    table#ventas.table.table-hover
            thead
                th CÃ³digo
                th Ticket  
                th Cliente 
                th Subtotal
                th IVA
                th Total
                th Pago Con
                th Cambio
                th Fecha
                th Hora
                th.text-center Acciones
            tbody
                each v in ventas
                    tr(scope="row")
                        td.text-center
                            label.badge.badge-dark #{ v.folio }
                        td.text-center
                            label.badge.badge-dark #{ v.noTicket }
                        td #{ v.cliente}
                        td $ #{parseFloat( v.subtotal).toFixed(2) }
                        td $ #{parseFloat( v.iva).toFixed(2) }
                        td $ #{parseFloat( v.total).toFixed(2) }
                        td $ #{parseFloat( v.pagoCon).toFixed(2) }
                        td $ #{parseFloat( v.cambio).toFixed(2) }
                        td #{ v.fecha }
                        td #{ v.hora }
                        td.text-center
                            div.btn-group
                                a(href="/ventas/ver/" + v.id , data-toggle="tooltip", data-placement="top", title="Ver detalles").btn.btn-info
                                    i(style="color: white;").fas.fa-eye
                   
